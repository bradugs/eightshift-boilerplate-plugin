{
  "name": "wp-boilerplate-plugin",
  "version": "1.0.0",
  "author": "Team Eightshift",
  "private": true,
  "main": "",
  "scripts": {
    "__eslintTheme": "eslint assets/**/*.js",
    "__stylelintTheme": "stylelint assets/**/*.scss",
    "lintStyle": "npm run __stylelintTheme",
    "lintJs": "npm run __eslintTheme",
    "lint": "npm run lintJs && npm run lintStyle && bash bin/precommit.sh",
    "precommit": "npm run lint",
    "dev": "NODE_ENV=development webpack -p --progress --mode development",
    "start": "NODE_ENV=development webpack --progress --watch --display-error-details --display-reasons --mode development",
    "build": "NODE_ENV=production webpack -p --progress --mode production",
    "postinstall": "npm run build"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@infinumjs/eslint-config": "^1.1.0",
    "@infinumjs/stylelint-config": "^1.0.0",
    "babel-eslint": "^9.0.0",
    "babel-loader": "^8.0.0",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.2",
    "css-loader": "^1.0.0",
    "eslint": "^5.4.0",
    "eslint-plugin-import": "^2.14.0",
    "file-loader": "^2.0.0",
    "husky": "^0.14.3",
    "imports-loader": "^0.8.0",
    "mini-css-extract-plugin": "^0.4.2",
    "node-sass": "^4.9.3",
    "postcss-cssnext": "^3.1.0",
    "postcss-loader": "^3.0.0",
    "precss": "^3.1.2",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.0",
    "stylelint": "^9.5.0",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0",
    "webpack-manifest-plugin": "^2.0.3"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "autoprefixer": "^9.1.3",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^4.1.0"
  },
  "browserslist": [
    "android >= 4.2",
    "not ie < 11",
    "last 2 versions",
    "Safari >= 8"
  ]
}
